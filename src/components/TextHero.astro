<div class="hero-section min-h-dvh flex items-center justify-center">
    <div class="text-center py-18 max-w-5xl m-auto">
        <div class="m-a-from-bottom-1">
            <slot name="content1">
        </div>
        <div class="m-a-from-bottom-2">
            <slot name="content2">
        </div>
    </div>
</div>

<script>
	import { gsap, fadeIn } from "@lib/gsap";

    const sections = document.querySelectorAll('.hero-section:not([data-initialized])')

    sections.forEach((section) => {
        const element1 = section.querySelector('.m-a-from-bottom-1')
        const element2 = section.querySelector('.m-a-from-bottom-2')

        const tlHero = gsap.timeline({
            scrollTrigger: {
                trigger: section,
                toggleActions: 'play none none reverse',
                start: 'top 30%',
            }
        })

        tlHero
            .add(fadeIn(element1))
            .add(fadeIn(element2))

        section.setAttribute('data-initialized', 'true')
    })
</script>