---
interface Props {
	title?: string
}

const {
	title = '',
} = Astro.props;
---
<div class="slide m-bg-split-2">
    <div class="grid grid-cols-1 md:grid-cols-2">
        <div>
            {title !=='' && <h2 class="text-center py-2 border-b border-current uppercase text-xs font-bold">{title}</h2>}
            <div class="p-4 md:px-18">
                <slot name="content1" />
            </div>
        </div>
        <div>
            {title !=='' && <h2 class="text-center py-2 border-b border-current uppercase text-xs font-bold">{title}</h2>}
            <div class="p-4 md:px-18">
                <slot name="content2" />
            </div>
        </div>
    </div>
</div>

<style>
    .m-bg-split-2 {
        background: linear-gradient(180deg, var(--color-red-400) 50%, transparent 50%);
    }   
    @media (min-width: 768px) {
     	.m-bg-split-2 {
            background: linear-gradient(90deg, var(--color-red-400) 50%, transparent 50%);
        }   
    }
</style>